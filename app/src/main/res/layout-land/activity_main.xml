<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numbers"
        >

        <TextView
            android:id="@+id/previous_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0"
            android:textSize="32sp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/current_number"
            app:layout_constraintStart_toStartOf="@+id/current_number"
            app:layout_constraintTop_toTopOf="@id/current_number"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/current_number"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:padding="0dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="64sp"
            android:textColor="?android:textColorPrimary"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/current_calculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:padding="0dp"
            android:text="0"
            android:textColor="?android:textColorPrimary"
            android:includeFontPadding="false"
            android:textAlignment="textEnd"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@+id/current_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="4dp"
        android:paddingTop="4dp"

        android:background="@drawable/buttons_top_border"

        android:id="@+id/button_grid"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_above="@id/button_grid"
            android:layout_below="@id/numbers"

            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="4dp"
            >
            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <ImageButton
                android:id="@+id/button_backspace"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_backspace_24"
                android:background="@drawable/backspace_button_styling"
                >
            </ImageButton>
            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="7" >
            </Space>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp"
            >

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <ImageButton
                android:id="@+id/button_swap"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:background="@drawable/mode_swap_style"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_sync_alt_24"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_mode"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                android:text="@string/modeRadText"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:cornerRadius="36dp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_squareRoot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/squareRootText"
                android:textColor="@color/white"
                android:textSize="32sp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_clear"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/clearText"
                android:textColor="@color/white"
                android:textSize="32sp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/parenthesesText"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:cornerRadius="36dp"

                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_percent"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/percentText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_divide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary50"
                android:text="@string/divideText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp"

            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_sin"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/trigSinText"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_cos"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/trigCosText"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_tan"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/trigTanText"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/sevenText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/eightText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/nineText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_multiply"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary50"
                android:text="@string/multiplyText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp"

            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_naturalLog"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/naturalLogText"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_log"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/LogText"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_invert"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/fractionText"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/fourText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/fiveText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/sixText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary50"
                android:text="@string/subtractText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp"

            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_eExponent"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/ePowerXText"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_squared"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/xSquaredText"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_exponent"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/xPowerYText"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/oneText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/twoText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/threeText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_add"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary50"
                android:text="@string/additionText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="4dp"

            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_absoluteValue"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/absoluteValueText"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAllCaps="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_pi"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                android:text="@string/piText"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="36dp"
                android:includeFontPadding="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_e"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                app:cornerRadius="36dp"
                android:text="@string/eText"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_sign"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/signText"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/zeroText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_decimal"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="@string/decimalText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <Button
                android:id="@+id/button_equals"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:backgroundTint="@color/material_dynamic_primary20"
                android:text="@string/equalsText"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="36dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>